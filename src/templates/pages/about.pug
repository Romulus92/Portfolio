extends ../template


block variables
  - var title = 'Обо мне'

block content
  .about__wrapper
    header.header
      .header__top
        ul.about__socials
          each item in ["vk", "github"]
            li.socials__item
              a(href='' class="socials__link socials__link_" + item)
                svg(class='socials__link-img socials__link-img_' + item) 
                  use(xlink:href="assets/svg/symbol/svg/sprite.symbol.svg#" + item)
        .about__hamburger
          svg.hamburger
            use(xlink:href="assets/svg/symbol/svg/sprite.symbol.svg#hamburger")
      .header__person
        include ../common/person.pug
      .header__scroll
        svg.arrow__down
          use(xlink:href="assets/svg/symbol/svg/sprite.symbol.svg#arrow_down")
    .about__content
      .about__person
        .about__heading
          h1.about__heading-text Обо мне
        .about__desc
          img.about__img(src="assets/images/about_picture.png", alt="")
          h2.about__heading-desc Кто я
          p.about__text Я веб разработчик из Уфы. Мне 25 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
          p.about__text Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
      .about__skills
        .skills__desc
          h2.skills__heading Чем я могу быть вам полезен
          p.skills__text Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
        ul.skills-list
          each item in ['Frontend', 'Backend', 'Workflow']
            li.skills-list__item
              .skills-row
                span.skills-row__title #{item}
                ul.skills-row__list
                  each skill in ['HTML5', 'CSS3', 'JavaScript']
                    li.skills-row__item
                      .skill
                        svg.skill__circle
                        span.skill__title #{skill}     
      
          

